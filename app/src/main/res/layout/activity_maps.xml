        android:background="@drawable/button_circle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />-->
    <Button
        android:id="@+id/panicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:clickable="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/panicButton"
        android:layout_marginTop="15dp"
        android:gravity="center"

        >
        <Button
            android:id="@+id/panicButtonDrink"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_drink_selector"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true" />
        <Button
            android:id="@+id/panicButtonPerrea"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_perrea_selector"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true" />
        <Button
            android:id="@+id/panicButtonFight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_fight_selector"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true" />


    </LinearLayout>


</RelativeLayout>